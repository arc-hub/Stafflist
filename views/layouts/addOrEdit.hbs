<h3>{{viewTitle}}</h3>

<form action="/staff" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{staff._id}}">
<div class="form-group">
    <label>Full Name</label>
    <input type="text" class="form-control" name ="email" placeholder="Email" value="{{staff.email}}">
</div>
<div class="form-row">
    <div class="form group col-md-6">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{staff.mobile}}">
    </div>
<div class="form-group col-md-6">
    <label>position</label>
    <input type="text" class="form-control" name="position" placeholder="Position" value="{{staff.position}}">

</div>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-info">Submit</button>
    <a class="btn btn-secondary" href="/staff/list">View All</a>
</div>
</form>